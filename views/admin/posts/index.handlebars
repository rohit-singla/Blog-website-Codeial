<div class="container">
    <div class="alert alert-secondary text-center">
        <h1>ALL POSTS</h1>    
    </div>
        
    <table class="table table-bordered">
        <thead class="bg-dark text-center">
        <tr class="text-white">          
            <th>Title</th>
            <th>User</th>
            <th>Description</th>
            <th>Status</th>
            <th>Comments Allowed</th>
            <th>Category</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody class="text-center">
        {{#each posts}}
            {{#if ../user.isAdmin}}
            <tr>    
                <td>{{title}}</td>
                <td>{{user.firstName}} {{user.lastName}}</td>
                <td>{{description}}</td>
                <td>{{status}}</td>
                <td>{{allowComments}}</td>
                <td>{{category.title}}</td>
                <td class="d-flex">
                    <a href="/admin/posts/edit/{{_id}}" class="btn btn-sm btn-warning mr-2">Edit Post</a>
                    <form action="/admin/posts/delete/{{id}}?newMethod=DELETE" method="post">
                        <button class="btn btn-sm btn-danger" type="submit">Delete Post</button>
                    </form>
                </td>
            </tr>
            {{else}}
                {{#equal user.id ../user.id}}
                <tr>    
                    <td>{{title}}</td>
                    <td>{{user.firstName}} {{user.lastName}}</td>
                    <td>{{description}}</td>
                    <td>{{status}}</td>
                    <td>{{allowComments}}</td>
                    <td>{{category.title}}</td>
                    <td class="d-flex">
                        <a href="/admin/posts/edit/{{_id}}" class="btn btn-sm btn-warning mr-2">Edit Post</a>
                        <form action="/admin/posts/delete/{{id}}?newMethod=DELETE" method="post">
                            <button class="btn btn-sm btn-danger" type="submit">Delete Post</button>
                        </form>
                    </td>
                </tr>
                {{/equal}}
            {{/if}}   
        {{/each}}
        
        </tbody>
    </table>
    
    
</div>
