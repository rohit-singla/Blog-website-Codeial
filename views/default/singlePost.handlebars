
    <div class="row">

        <!-- Post Content Column -->
        <div class="col-lg-8">

            <!-- Title -->
            <h1 class="mt-4">{{post.title}}</h1>

            <!-- Author -->
            <p class="lead">
                by
                {{#equal post.user.id user.id}}
                    <a href="/profile/{{user._id}}">{{post.user.firstName}} {{post.user.lastName}}</a>
                {{else}}
                    <a href="#">{{post.user.firstName}} {{post.user.lastName}}</a>
                {{/equal}}
            </p>

            <hr>

            <!-- Date/Time -->
            <p>Posted on {{post.createdAt}}</p>

            <hr>

            <!-- Preview Image -->
            <img class="img-fluid rounded" src="{{post.file}}" alt="">

            <hr>

            <!-- Post Content -->
            <p class="lead">{{post.description}}</p>


            <hr>

            <!-- Comments Form -->
            <div class="card my-4">
                <h5 class="card-header">Leave a Comment:</h5>
                <div class="card-body">
                    <form action="/post/{{post._id}}" method="post">
                        <div class="form-group">
                            <textarea class="form-control" rows="3" name="comment_body" placeholder="Type here..."></textarea>
                            <input type="hidden" name="id" value="{{post._id}}">
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>
            </div>

            <!-- Single Comment -->

            {{#each post.comments}}
                {{#if commentIsApproved}}
                    <div class="media mb-4">
                        <img class="d-flex mr-3 rounded-circle" src="../uploads/male.jpg" alt="">
                        <div class="media-body">
                            <h5 class="mt-0">{{user.firstName}} {{user.lastName}}</h5>
                           {{body}}
                        </div>
                    </div>
                {{/if}}

            {{/each}}




        </div>

        <!-- Sidebar Widgets Column -->
        <div class="col-md-4">

            <!-- Search Widget -->
            <div class="card my-4">
                <h5 class="card-header">Search</h5>
                <div class="card-body">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search for...">
                        <span class="input-group-btn">
                  <button class="btn btn-secondary" type="button">Go!</button>
                </span>
                    </div>
                </div>
            </div>

            <!-- Categories Widget -->
            <div class="card my-4">
                <h5 class="card-header">Category</h5>
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-6">
                            <ul class="list-unstyled mb-0">
                                <li>
                                    <a href="#">{{post.category.title}}</a>
                                </li>
                            </ul>
                        </div>
                    </div>  
                </div>
            </div>

            <!-- Side Widget -->
            <div class="card my-4">
                <h5 class="card-header">Users</h5>
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-6">
                            <ul class="list-unstyled mb-0">
                                <li>
                                    {{#equal post.user.id user.id}}
                                        <a href="/profile/{{user._id}}">{{post.user.firstName}} {{post.user.lastName}}</a>
                                    {{else}}
                                        <a href="#">{{post.user.firstName}} {{post.user.lastName}}</a>
                                    {{/equal}}
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>
    <!-- /.row -->
